<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<GridPane xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_LEFT" hgap="10" vgap="10"
          fx:controller="com.orhanararat.Controller.Controller">
    <padding>
        <Insets left="10"></Insets>
    </padding>

    <Label text="Ilan Kayit" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <font>
            <Font size="15">
            </Font>
        </font>
    </Label>
    <Label text="Ilan Adi: " GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
    <TextField fx:id="ilanAdi" promptText="Lutfen Ilan Adini Giriniz" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextField>

    <Label text="Arac Fiyati: " GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
    <TextField fx:id="aracFiyati" promptText="Aracin Fiyati" GridPane.rowIndex="2" GridPane.columnIndex="1"></TextField>

    <Label text="Arac Km: " GridPane.rowIndex="3" GridPane.columnIndex="0"></Label>
    <TextField fx:id="aracKm" promptText="Aracin Km" GridPane.rowIndex="3" GridPane.columnIndex="1"></TextField>

    <Label text="Ilan Tarihi: " GridPane.rowIndex="4" GridPane.columnIndex="0"></Label>
    <!--<TextField promptText="DataModel Tarihi" GridPane.rowIndex="4" GridPane.columnIndex="1"></TextField>-->
    <DatePicker GridPane.rowIndex="4" GridPane.columnIndex="1"></DatePicker>

    <Label text="Arac Marka: " GridPane.rowIndex="5" GridPane.columnIndex="0"></Label>
    <TextField fx:id="aracMarka" promptText="Aracin Markasi" GridPane.rowIndex="5" GridPane.columnIndex="1"></TextField>

    <Label text="Sehir: " GridPane.rowIndex="6" GridPane.columnIndex="0"></Label>
    <TextField fx:id="aracSehir" promptText="Sehir" GridPane.rowIndex="6" GridPane.columnIndex="1"></TextField>

    <Button text="Kayit" GridPane.rowIndex="7" GridPane.columnIndex="1" onAction="#textWriter"></Button>


    <Label text="Araba Kayit" GridPane.rowIndex="0" GridPane.columnIndex="2">
        <font>
            <Font size="15">
            </Font>
        </font>
    </Label>

    <Label text="Marka: " GridPane.rowIndex="1" GridPane.columnIndex="2"></Label>
    <TextField promptText="Marka" GridPane.rowIndex="1" GridPane.columnIndex="3"></TextField>

    <Label text="Model: " GridPane.rowIndex="2" GridPane.columnIndex="2"></Label>
    <TextField promptText="Model" GridPane.rowIndex="2" GridPane.columnIndex="3"></TextField>

    <Label text="Vites Turu: " GridPane.rowIndex="3" GridPane.columnIndex="2"></Label>
    <TextField promptText="Vites Turu" GridPane.rowIndex="3" GridPane.columnIndex="3"></TextField>

    <Label text="Yakit Turu: " GridPane.rowIndex="4" GridPane.columnIndex="2"></Label>
    <TextField promptText="Yakit Turu" GridPane.rowIndex="4" GridPane.columnIndex="3"></TextField>

    <Label text="Renk: " GridPane.rowIndex="5" GridPane.columnIndex="2"></Label>
    <TextField promptText="Renk" GridPane.rowIndex="5" GridPane.columnIndex="3"></TextField>

    <Button text="Kayit" GridPane.rowIndex="6" GridPane.columnIndex="3"></Button>

    <GridPane hgap="10" vgap="10" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="4">
        <Label text="Yakit Turu Kayit" GridPane.rowIndex="0" GridPane.columnIndex="0">
            <font>
                <Font size="15">
                </Font>
            </font>
        </Label>

        <Label text="Yakit Turu: " GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
        <TextField promptText="Yakit" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextField>
        <Button text="Kayit" GridPane.rowIndex="2" GridPane.columnIndex="1"></Button>

        <Label text="Vites Turu Kayit" GridPane.rowIndex="0" GridPane.columnIndex="2">
            <font>
                <Font size="15">
                </Font>
            </font>
        </Label>

        <Label text="Vites Turu: " GridPane.rowIndex="1" GridPane.columnIndex="2"></Label>
        <TextField promptText="Vites" GridPane.rowIndex="1" GridPane.columnIndex="3"></TextField>
        <Button text="Kayit" GridPane.rowIndex="2" GridPane.columnIndex="3"></Button>

        <Label text="Renk Kayit" GridPane.rowIndex="3" GridPane.columnIndex="0">
            <font>
                <Font size="15">
                </Font>
            </font>
        </Label>

        <Label text="Renk Turu: " GridPane.rowIndex="4" GridPane.columnIndex="0"></Label>
        <TextField promptText="Renk" GridPane.rowIndex="4" GridPane.columnIndex="1"></TextField>
        <Button text="Kayit" GridPane.rowIndex="5" GridPane.columnIndex="1"></Button>

        <Label text="Sehir Kayit" GridPane.rowIndex="3" GridPane.columnIndex="2">
            <font>
                <Font size="15">
                </Font>
            </font>
        </Label>

        <Label text="Sehir: " GridPane.rowIndex="4" GridPane.columnIndex="2"></Label>
        <TextField promptText="Sehir" GridPane.rowIndex="4" GridPane.columnIndex="3"></TextField>
        <Button text="Kayit" GridPane.rowIndex="5" GridPane.columnIndex="3"></Button>

    </GridPane>

</GridPane>